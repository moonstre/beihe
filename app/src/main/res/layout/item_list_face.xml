<?xml version="1.0" encoding="utf-8"?>
<com.yiliao.chat.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFace"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvFace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black_333333"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/ivFace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@mipmap/icon_face_delete" />
</com.yiliao.chat.view.SquareRelativeLayout>