<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="274dp"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black_222222"
        android:text="请提交您的基本资料"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black_858585"
        android:text="方便活动发起人联系到你哦~"
        android:layout_marginTop="9dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="right"
        android:layout_marginRight="33dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/Apply_Dialog_MaleLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Apply_Dialog_Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/check_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_999999"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="我是男生"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Apply_Dialog_FemaleLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Apply_Dialog_Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/check_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_999999"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:text="我是女生"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="33dp">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7dp"
            android:background="@mipmap/activity_phone"/>
        <EditText
            android:id="@+id/Apply_Dialog_Phone"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/activity_edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="33dp">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="7dp"
            android:background="@mipmap/activity_wchat"/>
        <EditText
            android:id="@+id/Apply_Dialog_WChat"
            android:layout_width="160dp"
            android:layout_height="27dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/activity_edit"/>
    </LinearLayout>

    <TextView
        android:id="@+id/Apply_Dialog_Subimt"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="提交"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/activity_button_bg"/>
</LinearLayout>