<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_e1e1e1"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/to_home"/>
        <TextView
            android:id="@+id/to_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/service_price"/>
        <TextView
            android:id="@+id/service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--服务内容-->
        <TextView
            android:id="@+id/service_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_lable"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/service_tag_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" />
    </LinearLayout>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/service_time"/>
        <EditText
            android:id="@+id/service_time"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:inputType="number"
            android:background="@drawable/yuan_edit_garee"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="小时"/>
    </LinearLayout>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/phone_number"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuan_edit_garee"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="11"
            android:padding="3dp"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/go_home_time"/>

        <TextView
            android:id="@+id/go_home_time"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuan_edit_garee"
            android:gravity="center"
            android:maxLength="11"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/go_home_time_hour"
            android:layout_width="40dp"
            android:maxLength="11"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:background="@drawable/yuan_edit_garee"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/go_home_address"/>
        <EditText
            android:id="@+id/go_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:minLines="3"
            android:background="@drawable/yuan_edit_garee"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/agree_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:src="@drawable/selector_agree_checked_background" />

        <TextView
            android:id="@+id/agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/agree_des"
            android:textColor="@color/gray_666666"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sure_tv"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/sure_order"
        android:background="@drawable/yuan_gree_save"/>

</LinearLayout>