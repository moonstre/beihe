<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/AddLoction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/AddLoction_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:text="萨拉都爱伪屌丝"/>
        <TextView
            android:id="@+id/AddLoction_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_666666"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/AddLoction_Title"
            android:layout_marginBottom="8dp"
            android:text="萨拉都爱伪屌丝"/>
        <TextView
            android:id="@+id/AddLoction_Dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_666666"
            android:textSize="13sp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="萨拉都爱伪屌丝"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_d5d5d5"/>
</LinearLayout>
