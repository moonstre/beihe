<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/head_iv"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:contentDescription="@null" />

        <!--右边信息-->
        <FrameLayout
            android:id="@id/right_fl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="9dp">

            <!--文字-->
            <TextView
                android:id="@id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/black_333333"
                android:textSize="13sp" />

            <!--图片-->
            <ImageView
                android:id="@id/content_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null" />

            <!--视频标志-->
            <ImageView
                android:id="@id/video_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/little_video"
                android:contentDescription="@null"
                android:visibility="gone" />

        </FrameLayout>

        <!--信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@id/head_iv"
            android:layout_toStartOf="@id/right_fl"
            android:orientation="vertical">

            <TextView
                android:id="@id/nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_c15078"
                android:textSize="14sp" />

            <TextView
                android:id="@id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_333333"
                android:textSize="13sp" />

            <TextView
                android:id="@id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/gray_868686"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_e1e1e1" />

</LinearLayout>
