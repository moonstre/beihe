<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLoginClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="37dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@null"
        android:src="@mipmap/icon_login_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="left"
        android:layout_marginStart="40dp"
        android:layout_marginTop="23dp"
        android:text="@string/login_title"
        android:textColor="@color/black_333333"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/mobile_et"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:background="@color/transparent"
        android:drawableLeft="@mipmap/icon_login_phone"
        android:drawablePadding="12dp"
        android:hint="@string/please_input_phone_login"
        android:lines="1"
        android:maxLength="11"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/black_bbbbbb"
        android:textSize="16sp" />
    <!--android:digits="0123456789"-->
    <!--android:inputType="number"-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/black_aaaaaa" />

    <EditText
        android:id="@+id/code_et"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="40dp"
        android:background="@color/transparent"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:drawableLeft="@mipmap/icon_login_pwd"
        android:drawablePadding="12dp"
        android:hint="@string/please_input_password"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="20"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/black_bbbbbb"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/black_aaaaaa" />

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_scroll_phone_text_back"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@drawable/selector_charge_text_color"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/forget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingTop="8dp"
        android:text="@string/forget_password"
        android:textColor="@color/black_aaaaaa"
        android:textSize="14sp" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/black_aaaaaa" />

</LinearLayout>