<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="164dp"
        android:background="@drawable/shape13"
        android:orientation="vertical"
       >
        <TextView
            android:id="@+id/PayMoney_Text"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:textSize="16sp"
            android:textColor="#6d6e73"
            android:gravity="center"
            android:text=""/>
        <ImageView
            android:id="@+id/PayMoney_Image"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/PayMoney_Text"
            android:background="#f2f2f2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/PayMoney_Image"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/PayMoney_Cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:text="取消"
                android:textColor="#ff4500"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f2f2f2"/>
            <TextView
                android:id="@+id/PayMoney_Sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="支付"
                android:gravity="center"
                android:textColor="#ff4500"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
