<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/month_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:textColor="@color/gray_868686"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingBottom="5dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="8dp"
            android:textColor="@color/gray_868686"
            android:textSize="12sp"
            android:visibility="gone"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <!--图片-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--第一张-->
        <FrameLayout
            android:id="@+id/first_fl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/default_back_small"
                android:contentDescription="@null"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/first_iv"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:contentDescription="@null" />

            <!--遮罩-->
            <View
                android:id="@+id/first_cover_v"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@color/black_333f3b48"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/first_lock_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/lock_new"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/first_play_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/video_new"
                android:contentDescription="@null"
                android:visibility="gone" />

            <TextView
                android:id="@+id/first_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/checking"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />

        </FrameLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <!--第二张-->
        <FrameLayout
            android:id="@+id/second_fl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/default_back_small"
                android:contentDescription="@null"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/second_iv"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:contentDescription="@null" />

            <!--遮罩-->
            <View
                android:id="@+id/second_cover_v"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@color/black_333f3b48"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/second_lock_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/lock_new"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/second_play_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/video_new"
                android:contentDescription="@null"
                android:visibility="gone" />

            <TextView
                android:id="@+id/second_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/checking"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />

        </FrameLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <!--第三张-->
        <FrameLayout
            android:id="@+id/third_fl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/default_back_small"
                android:contentDescription="@null"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/third_iv"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:contentDescription="@null" />

            <!--遮罩-->
            <View
                android:id="@+id/third_cover_v"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@color/black_333f3b48"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/third_lock_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/lock_new"
                android:contentDescription="@null"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/third_play_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/video_new"
                android:contentDescription="@null"
                android:visibility="gone" />

            <TextView
                android:id="@+id/third_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/checking"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>