<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="164dp"
        android:background="@drawable/black_list_detele"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/Logout_Text"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:textSize="14sp"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:text="是否从黑名单移除?"/>
        <ImageView
            android:id="@+id/Logout_Image"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/Logout_Text"
            android:background="#f2f2f2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/Logout_Image"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Delete_Cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:text="取消"
                android:textColor="@color/black_btn_color"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f2f2f2"/>
            <TextView
                android:id="@+id/Delete_Sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="移除"
                android:gravity="center"
                android:textColor="@color/black_btn_color"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
