<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLoginClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="37dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@null"
        android:src="@mipmap/icon_login_close"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvRegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="left"
        android:layout_marginStart="40dp"
        android:layout_marginTop="23dp"
        android:text="@string/add_phone"
        android:textColor="@color/black_333333"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/mobile_et"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:background="@color/transparent"
        android:digits="0123456789"
        android:hint="@string/please_input_phone_login"
        android:inputType="number"
        android:lines="1"
        android:maxLength="11"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/black_bbbbbb"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/black_aaaaaa" />

    <!--密码 验证码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:id="@+id/send_verify_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="@string/get_code_one"
            android:textColor="@color/violet_d81aff"
            android:textSize="15sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/code_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/send_verify_tv"
            android:background="@color/transparent"
            android:hint="@string/please_verify_code"
            android:inputType="number"
            android:lines="1"
            android:maxLength="20"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/black_bbbbbb"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/black_aaaaaa" />

    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/shape_scroll_phone_text_back"
        android:gravity="center"
        android:text="@string/add_phone_confirm"
        android:textColor="@drawable/selector_charge_text_color"
        android:textSize="17sp" />

</LinearLayout>