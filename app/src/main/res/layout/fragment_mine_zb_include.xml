<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!--我的订单-->
    <RelativeLayout
        android:id="@+id/order_fl"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="55dp"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/dingdan"
            android:text="@string/order"
            android:drawablePadding="11dp"
            android:paddingLeft="12dp"
            android:textColor="@color/black_444444"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/order_number_tv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:background="@drawable/shape_unread_count_text_back"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f1f1f1"
        android:visibility="visible" />


    <!--收徒赚钱-->
    <TextView
        android:id="@+id/share_rl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:drawableStart="@mipmap/become_master"
        android:drawablePadding="11dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="分享赚钱"
        android:textColor="@color/black_444444"
        android:textSize="15sp"
        tools:ignore="RelativeOverlap" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_ebebeb" />

    <!--红包-->
    <RelativeLayout
        android:id="@+id/red_fl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/red_pack_new"
            android:text="@string/red_pack"
            android:drawablePadding="11dp"
            android:paddingLeft="12dp"
            android:textColor="@color/black_444444"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/red_number_tv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:background="@drawable/shape_unread_count_text_back"
            android:gravity="center"
            android:text="@string/zero"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:ignore="SmallSp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f1f1f1"
        android:visibility="visible" />
</LinearLayout>