<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_vivo"
                android:layout_width="0dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/phone_vivo"
                android:drawablePadding="21dp"
                android:gravity="center_horizontal"
                android:paddingTop="33dp"
                android:text="@string/vivo"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phone_meizu"
                android:layout_width="0dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/phone_meizu"
                android:drawablePadding="21dp"
                android:gravity="center_horizontal"
                android:paddingTop="33dp"
                android:text="@string/meizu"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_huawei"
                android:layout_width="0dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/phone_huawei"
                android:drawablePadding="21dp"
                android:gravity="center_horizontal"
                android:paddingTop="33dp"
                android:text="@string/huawei"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phone_xiaomi"
                android:layout_width="0dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/phone_xiaomi"
                android:drawablePadding="21dp"
                android:gravity="center_horizontal"
                android:paddingTop="33dp"
                android:text="@string/xiaomi"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_oppo"
                android:layout_width="0dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/phone_oppo"
                android:drawablePadding="21dp"
                android:gravity="center_horizontal"
                android:paddingTop="33dp"
                android:text="@string/oppo"
                android:textColor="@color/black_333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>