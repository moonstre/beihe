<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="324dp"
        android:layout_height="443dp"
        android:layout_centerInParent="true"
        android:background="@drawable/invite_code_back">

        <!--上方-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--我的邀请码-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:text="@string/my_invite_code"
                android:textColor="@color/black_3f3b48"
                android:textSize="15sp" />

            <!--邀请码-->
            <TextView
                android:id="@id/code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/zero"
                android:textColor="@color/red_fe4f67"
                android:textSize="60sp"
                android:textStyle="bold" />

            <!--复制-->
            <TextView
                android:id="@id/copy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/copy_back"
                android:gravity="center_horizontal"
                android:paddingTop="6dp"
                android:text="@string/copy"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <!--下方-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--输入邀请码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <EditText
                    android:id="@id/code_et"
                    android:layout_width="245dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColor="@color/black_333333"
                    android:textColorHint="@color/black_333333"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="245dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/gray_e1e1e1" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:text="@string/please_input_code"
                android:textColor="@color/gray_868686"
                android:textSize="15sp" />

            <!--确认-->
            <TextView
                android:id="@id/confirm_tv"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/shape_code_confirm_back"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>