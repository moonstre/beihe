<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/Establish_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black_333333"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="6dp"
            android:background="@null"
            android:textColorHint="@color/black_333333"
            android:hint="请输入活动标题"/>
        <EditText
            android:id="@+id/Establish_Content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="13sp"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_999999"
            android:hint="告诉大家你的安排吧"
            android:layout_marginBottom="6dp"
            android:gravity="start"
            android:background="@null"/>
        <TextView
            android:id="@+id/Establish_TitleNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:textColor="@color/gray_cccccc"
            android:text="0/100"/>
        <ImageView
            android:id="@+id/Establish_Image"
            android:layout_width="146dp"
            android:layout_height="56dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/tianjiafengmian"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
           >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/dingwei"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/Establish_Address"/>

            <TextView
                android:id="@+id/Establish_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_999999"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:text="添加活动地址"
                android:layout_alignBottom="@+id/Establish_Image"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="活动日期"/>

            <TextView
                android:id="@+id/Establish_SDate"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="活动时间"/>

            <TextView
                android:id="@+id/Establish_STime"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="报名截止日期"/>

            <TextView
                android:id="@+id/Establish_EDate"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="报名截止时间"/>

            <TextView
                android:id="@+id/Establish_ETime"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="手机"/>

            <EditText
                android:id="@+id/Establish_Phone"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="微信"/>

            <EditText
                android:id="@+id/Establish_WeChat"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="参入人数"/>

            <EditText
                android:id="@+id/Establish_JoinNum"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="男性收费"/>

            <EditText
                android:id="@+id/Establish_MalePrice"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:text="女性收费"/>

            <EditText
                android:id="@+id/Establish_FemalePrice"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:paddingRight="5dp"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/juxing_edit"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/Establish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="发起活动"
            android:gravity="center"
            android:background="@mipmap/activity_button"/>
    </LinearLayout>

</ScrollView>
