<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp">

    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <!--头像部分-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:contentDescription="@null" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">

            <!--左边-->
            <FrameLayout
                android:id="@+id/ll_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/black_171717"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/gray_999999"
                    android:textSize="14sp" />



            </FrameLayout>
            <RelativeLayout
                android:id="@+id/rl_state"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/yuan_gree_save"
                >
                <LinearLayout
                    android:id="@+id/ll_state"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/user_head_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/user_haer_iv"
                        />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/invide_tv"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:text="邀请"/>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        style="@style/HorizontalDivideLine"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

</LinearLayout>